        <hr style="margin: 0; padding: 0">
        <ul class="unstyled app-index">

            <li>
                <a href="@Url.Action("Index", "ChargeCalculator")">
                    <div style="float: left"><i class="icon-star"></i></div>
                    <div class="app-panel"><span class="app-name">@WebChemistry.Web.Controllers.ChargeCalculatorController.AppName</span><br /> <span class="app-description">Conformationally dependent atomic charges of quantum mechanics quality</span> </div>
                    <div class="app-clear"></div>
                </a>
            </li>

            
        </ul>*@

        <h3 style="margin-bottom: 0px">Channel Computation</h3>
        <hr style="margin: 0; padding: 0">
        <ul class="unstyled app-index">
            <li>
                <a href="@Url.Action("Mole", "App")">
                    <div style="float: left"><i class="icon-mole"></i></div>
                    <div class="app-panel"><span class="app-name">MOLE 2.5</span><br /> <span class="app-description">Compute and analyze channels</span> </div>
                    <div class="app-clear"></div>
                </a>
            </li>
        </ul>

        <h3 style="margin-bottom: 0px">Local Sequence Alignment</h3>
        <hr style="margin: 0; padding: 0">
        <ul class="unstyled app-index">
            <li>
                <a href="@Url.Action("CrocoBLAST", "App")">
                    <div style="float: left"><i class="icon-fire"></i></div>
                    <div class="app-panel"><span class="app-name">CrocoBLAST</span><br /> <span class="app-description">Optimized parallel implementation of local sequence alignment algorithms</span> </div>
                    <div class="app-clear"></div>
                </a>
            </li>
        </ul>
</div>

@section scripts {
    <script>
        !function ($) {
            $(function () {
                $('#appsCarousel').carousel()
            })
        }(window.jQuery)
    </script>
}