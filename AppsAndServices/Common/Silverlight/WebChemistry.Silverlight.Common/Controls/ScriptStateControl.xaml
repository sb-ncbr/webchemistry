<UserControl x:Class="WebChemistry.Silverlight.Controls.ScriptStateControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    
    <Border x:Name="LayoutRoot" Background="{StaticResource GrayBrush8}"
            DataContextChanged="LayoutRoot_DataContextChanged_1" Padding="8 2">
        <TextBlock x:Name="stateText" Text="State" />
    </Border>
</UserControl>
